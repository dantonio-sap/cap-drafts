{
  "name": "cap-drafts",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xssec": "^3.2.13",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.5.2"
  },
  "devDependencies": {
    "cds-swagger-ui-express": "^0.4.0",
    "@sap/ux-specification": "^1.96.9",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch-cap.drafts.ui": "cds watch --open cap.drafts.ui/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4",
    "undeploy": "cf undeploy cap-drafts --delete-services --delete-service-keys",
    "create-swagger-json": "cds compile srv --service all -o docs --to openapi",
    "build": "mbt build"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "model": "*"
      },
      "auth": {
        "kind": "dummy"
      }
    }
  },
  "sapux": [
    "app/cap.drafts.ui"
  ],
  "engines": {
    "node": ">=12.18"
  }
}
